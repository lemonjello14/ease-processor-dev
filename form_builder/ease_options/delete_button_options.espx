<script>
function actionChange(v, i){
	var id = i.split('_');
	var i = id[1];
	if(v == 'set'){
		$('#delete_action_'+i).find('.set').show();
		$('#delete_action_'+i).find('.redirect').hide();
		$('#delete_action_'+i).find('.email').hide();
		$('.ui-dialog').animate({left: "403px"});
	}else if(v == 'redirect to'){
		$('#delete_action_'+i).find('.redirect').show();
		$('#delete_action_'+i).find('.set').hide();
		$('#delete_action_'+i).find('.email').hide();
		$('.ui-dialog').animate({left: "403px"});
	}else if(v == 'send email;'){
		$('#delete_action_'+i).find('.redirect').hide();
		$('#delete_action_'+i).find('.set').hide();
		$('#delete_action_'+i).find('.email').show();
		$('.ui-dialog').animate({left: "200px"});
	}
}

